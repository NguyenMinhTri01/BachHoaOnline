<div class="container-fluid">
  <div class="card">

    <div class="card-body">
      <h4 class="card-title m-b-0">Thông tin sản phẩm</h4>
      <!-- thêm form ơ đây -->
      <hr>
      <form action="" id="formDemo">
        <fieldset>
          <div class="row">
            <div class="col-sm-8 duongbo">
              <div class="form-group">
                <label for="tensanpham">Tên Sản Phẩm </label>
                <input type="text" class="form-control" name="pr_name" placeholder="">
              </div>
              <div class="row">
                <div class="col-sm-4 gia ">
                  <div class="form-group">
                    <label for="tensanpham">Giá </label>
                    <input type="number" class="form-control" name="pr_price" placeholder="">
                  </div>
                </div>
                <div class="col-sm-4 giamgia ">

                  <div class="form-group">
                    <label for="tensanpham">Giảm Giá </label>
                    <input type="number" class="form-control" id="pr_discount" placeholder="">
                  </div>
                </div>

              </div>
              <div class="row">
                <div class="col-sm-4  ">

                  <div class="form-group">
                    <label for="tensanpham">Khối lượng(Thể Tích) </label>
                    <input type="text" class="form-control" name="pr_value" placeholder="">
                  </div>
                </div>
                <div class="col-sm-4  ">

                  <div class="form-group">
                    <label for="tensanpham">Đơn Vị </label>
                    <input type="text" class="form-control" name="pr_unit" placeholder="">
                  </div>
                </div>
              </div>
              <div class="form-group">
                <label for="tensanpham"> Cấp Danh Mục </label>
                <select class="custom-select mr-sm-2" id="c_level">
                  <option selected>Choose...</option>
                  <option value="1">One</option>
                  <option value="2">Two</option>
                  <option value="3">Three</option>
                </select>
              </div>
              <div class="form-group">
                <label for="tensanpham">Danh Mục </label>
                <select class="custom-select mr-sm-2" id="c_name">
                  <option selected>Choose...</option>
                  <option value="1">One</option>
                  <option value="2">Two</option>
                  <option value="3">Three</option>
                </select>
              </div>
              <div class="form-group">
                <label for="tensanpham">Thương Hiệu </label>
                <select class="custom-select mr-sm-2" id="br_name">
                  <option selected>Choose...</option>
                  <option value="1">One</option>
                  <option value="2">Two</option>
                  <option value="3">Three</option>
                </select>
              </div>
              <div class="form-group">
                <label for="key">Từ Khóa </label>
                <input type="key" class="form-control" id="key" name="pr_key" required>
              </div>
              <div class="form-group">
                <label for="exampleFormControlTextarea1">Mô tả</label>
                <textarea class="form-control" name="pr_description" rows="3"></textarea>
              </div>
              <hr>
              <div class="box-header with-border">
                <h3 class="box-title">Album ảnh</h3>
              </div>
              <div class="box-body">
                <div class="form-group">
                  <div class="file-loading">

                    <input id="images" type="file" name="pr_listImage" multiple class="file"
                      data-overwrite-initial="false" data-min-file-count="0">

                  </div>
                </div>
              </div>
              <hr>
            </div>
            <div class="col-sm-4 ">
              <div class="box box-warning">
                <h6>Ảnh đại diện</h6>
                <div class="text-center">
                  <img
                    src="https://res.cloudinary.com/nguyenminhtri/BachHoaOnline/image_default/placeholder250x250_lnsqrn.png"
                    alt="brand image" class="image-preview border border-dark" width="260px" height="160px"
                    style="border-radius: 0px!important;">
                </div>
                <div class="text-center">Ảnh</div>
                <div>
                  <div class="custom-file">
                    <input type="file" name="pr_avatar" class="custom-file-input form-control" id="fileImageBrand"
                      accept=".png, .jpg, jpeg, .PNG, JPG, JPEG" required>
                    <label class="custom-file-label text-left" for="validatedCustomFile">Chọn File Ảnh...</label>
                    <div class="feedback" style="color:red"></div>
                  </div>
                </div>

              </div>

            </div>
          </div>

    </div>
    <div class="row">
      <div class="col-sm-8">

      </div>
      <div class="col-sm-4">
        <button type="submit" class="btn btn-primary" style="height: 40px;width: 150px;">Thêm sản phẩm</button>
      </div>
    </div>

  </div>
  </fieldset>
  </form>

