        <% productFamily.forEach((_product) => { %>
        <div class="col-md-3 top_brand_left">
            <div class="hover14 column">
                <div class="agile_top_brand_left_grid">
                    <% if(_product.pr_hot) {%>
                    <div class="agile_top_brand_left_grid_pos">
                        <img src="<%= SECURE_DELIVERY_URL %>c_scale,w_40/BachHoaOnline/icon/hot_fire" alt="logoHot"
                            class="img-responsive" style="position: relative; top: -10px; left: 2px;">
                    </div>
                    <% } %>
                    <div class="agile_top_brand_left_grid1">
                        <figure>
                            <div class="snipcart-item block text-center">
                                <div class="snipcart-thumb">
                                    <a href="product/<%= _product.pr_slug %>"><img title=" " alt=" "
                                            src="<%= SECURE_DELIVERY_URL %><%= _product.pr_avatar %>"
                                            style="width: 100%"></a>
                                    <% if(_product.pr_name.length >= 70) {%>
                                    <div style="min-height: 70px;">
                                        <p><%= _product.pr_name.slice(0, 70) %>...</p>
                                    </div>
                                    <% } else {%>
                                    <div style="min-height: 70px;">
                                        <p><%= _product.pr_name%></p>
                                    </div>
                                    <% } %>
                                    <% if(_product.pr_discount > 0) {%>
                                    <div style="min-height: 48px;">
                                        <span data='<%= _product.pr_price %>'
                                            class="priceSp"><%= _product.pr_priceString %> </span>
                                        <label class="discount" style="margin-left: 6px;">
                                            -<%= _product.pr_discount %>%</label>
                                        <h4><%= _product.pr_priceNewString %></h4>
                                    </div>
                                    <% } else {%>
                                    <div style="min-height: 48px;">
                                        <br>
                                        <h4><%= _product.pr_priceString %></h4>
                                    </div>
                                    <% } %>
                                </div>
                                <div class="snipcart-details top_brand_home_details">
                                    <button data-id="<%= _product._id %>" class="btnAddCart"> Chọn mua</button>
                                </div>
                            </div>
                        </figure>
                    </div>
                </div>
            </div>
        </div>
        <% }) %>
    </div>
    <div class="clearfix"> </div>
</div>
