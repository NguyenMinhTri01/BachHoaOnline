<div class="breadcrumbs">
    <ol class="breadcrumb breadcrumb1">
        <li><a href="/"><span class="glyphicon glyphicon-home" aria-hidden="true"></span>Trang Chủ</a></li>
        <li>Chi tiết sản phẩm</li>
    </ol>
</div>
<!-- //breadcrumbs -->
<div class="card" style="background-color:#fff;">
    <!-- <div class="container"> -->
    <div class="row">
        <aside class="col-sm-5 border-right">
            <div class="mySlides">
                <div class="numbertext"> 1 / <%= album.length + 1 %></div>
                <img src="<%= SECURE_DELIVERY_URL + product.pr_avatar %>" style="width:100% ;padding: 5px 22px;">
            </div>
            <% if(album.length > 0) {%>
            <% album.forEach(function(item, index){ %>
            <div class="mySlides">
                <div class="numbertext"><%= index + 2 %> / <%= album.length + 1 %></div>
                <img src="<%= SECURE_DELIVERY_URL + item.public_id %>" style="width:100%; padding: 5px 22px;">
            </div>
            <% }) %>
            <% } %>
            <a class="prev" onclick="plusSlides(-1)">❮</a>
            <a class="next" onclick="plusSlides(1)">❯</a>
            <div class="caption-container">
                <p id="caption"></p>
            </div>
            <div class="row" style="margin-left: 2px;">
                <div class="column1">
                    <img class="demo cursor" src="<%= SECURE_DELIVERY_URL + product.pr_avatar %>" style="width:100%;"
                        onclick="currentSlide(1)">
                </div>
                <% if(album.length > 0) {%>
                <% album.forEach(function(item, index){ %>
                <div class="column1">
                    <img class="demo cursor" src="<%= SECURE_DELIVERY_URL + item.public_id %>" style="width:100%"
                        onclick="currentSlide(<%= index + 2 %>)">
                </div>
                <% }) %>
                <% } %>
            </div>
        </aside>
        <aside class="col-sm-7">
            <article class="card-body p-5">
                <h3 class="title mb-3"><%= product.pr_name %></h3>

                <p class="price-detail-wrap">
                <div class="boxprice">
                    <% if(product.pr_discount > 0) {%>
                    <strong><%= product.pr_priceNewString %></strong>
                    <span class="strike"><%= product.pr_priceString %></span>
                    <label>-<%= product.pr_discount%> %</label>
                    <% } else {%>
                    <strong>30.000đ</strong>
                    <% } %>

                </div>
                </p> <!-- price-detail-wrap .// -->
                <dl class="item-property">
                    <ul class="thongtinsanpham">
                        <li><span>Thương hiệu</span>
                            <div><%= brand.br_name %></div>
                        </li>
                        <li><span>Thể tích/Khối lượng...</span>
                            <div><%= product.pr_capacity.value %> <%= product.pr_capacity.unit %></div>
                        </li>
                        <li><span>Sản Xuất tại</span>
                            <div><%= product.pr_origin %></div>
                        </li>
                        <li><span>Mô tả</span>
                            <p><%= product.pr_description %></p>
                        </li>

                    </ul>
                </dl>



                <div class="row">
                    <div class="col-sm-2">
                        <div class="form-group">
                            <label for="">
                                <p style="font-size:15px ; font-family: 'Raleway', sans-serif;color:#333;">Số lượng
                                </p>
                            </label>
                            <input min="1" type="number" class="form-control" id="numberOfProduct" value="1"
                                style="width:70px;">
                        </div>
                    </div> <!-- col.// -->
                    <div class="col-sm-5">
                        <dl class="param param-inline">
                            <i class="fa fa-star blue-star" aria-hidden="true"></i>
                            <i class="fa fa-star blue-star" aria-hidden="true"></i>
                            <i class="fa fa-star blue-star" aria-hidden="true"></i>
                            <i class="fa fa-star blue-star" aria-hidden="true"></i>
                            <i class="fa fa-star gray-star" aria-hidden="true"></i>
                        </dl> <!-- item-property .// -->
                    </div>
                    <div class="col-sm-5">
                        <div class="fb-like" data-href="<%= infoLikeShareFacebook.url %>" data-width=""
                            data-layout="button_count" data-action="like" data-size="small" data-share="false">
                        </div>
                        <div class="fb-share-button" data-href="<%= infoLikeShareFacebook.url %>"
                            data-layout="button_count" data-size="small">
                        </div>
                    </div>
                </div> <!-- row.// -->

                <button style="margin-bottom: 10px;width:98%;" data-id="<%= product._id %>"
                    class="btn btn-lg btn-primary text-uppercase btnAddCartDetail"> Chọn mua</button>
            </article> <!-- card-body.// -->
        </aside> <!-- col.// -->
    </div>
    <!-- </div> -->
    <!-- row.// -->
</div> <!-- card.// -->


